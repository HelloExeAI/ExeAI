// Prisma Schema for EXEAI
// Database: PostgreSQL (Supabase)
// ORM: Prisma
// Auth: NextAuth

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// AUTHENTICATION MODELS (NextAuth Required)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For email/password auth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription fields
  subscriptionTier       String?   @default("free_trial") // free_trial, pro, business
  subscriptionStatus     String?   @default("active") // active, cancelled, expired
  trialEndsAt           DateTime?
  currentPeriodEnd      DateTime?
  cancelAtPeriodEnd     Boolean   @default(false)
  stripeCustomerId      String?   @unique
  stripeSubscriptionId  String?   @unique
  stripePriceId         String?

  // Gmail Integration
  gmailConnected     Boolean   @default(false)
  gmailEmail         String?
  gmailAccessToken   String?   @db.Text
  gmailRefreshToken  String?   @db.Text
  gmailTokenExpiry   DateTime?

  // Relationships
  accounts    Account[]
  sessions    Session[]
  dailyNotes  DailyNote[]
  tasks       Task[]
  pages       Page[]
  expenses    Expense[]
  travelPlans TravelPlan[]
  shopping    ShoppingItem[]
  settings    UserSettings?

  @@index([email])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// EXEAI CORE FEATURES
// ============================================

// Daily Notes - Roam-style daily workspace
model DailyNote {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime // One note per day
  content   String   @db.Text // Raw HTML/Markdown content
  metadata  Json?    // Store additional data (tags, mentions, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[] // Tasks created from this daily note

  @@index([userId, date])
  @@unique([userId, date])
  @@map("daily_notes")
}

// Tasks - Todos, meetings, calls, reminders
model Task {
  id          String    @id @default(cuid())
  userId      String
  dailyNoteId String?   // Optional link to daily note
  title       String
  description String?   @db.Text
  type        String    @default("task") // task, meeting, call, reminder
  completed   Boolean   @default(false)
  priority    String?   @default("medium") // low, medium, high
  dueDate     DateTime?
  dueTime     String?   // Store time separately for flexibility
  reminder    DateTime? // When to send reminder
  metadata    Json?     // Store call agenda, meeting notes, etc.
  googleEventId String? // ID of the event in Google Calendar
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyNote DailyNote? @relation(fields: [dailyNoteId], references: [id], onDelete: SetNull)

  @@index([userId, completed])
  @@index([userId, dueDate])
  @@index([userId, type])
  @@map("tasks")
}

// Pages - Wiki-style pages with [[Page Name]] linking
model Page {
  id          String   @id @default(cuid())
  userId      String
  title       String   // Page name (unique per user)
  content     String   @db.Text
  linkedPages String[] // Array of page IDs this page links to
  tags        String[] // Tags for categorization
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, title])
  @@index([userId])
  @@map("pages")
}

// Expenses - Expense tracking
model Expense {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  currency    String   @default("INR")
  category    String   // food, transport, shopping, entertainment, etc.
  description String?
  date        DateTime
  paymentMode String?  // cash, card, upi, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId, category])
  @@map("expenses")
}

// Travel Plans
model TravelPlan {
  id          String   @id @default(cuid())
  userId      String
  destination String
  startDate   DateTime
  endDate     DateTime
  flight      String?
  hotel       String?
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startDate])
  @@map("travel_plans")
}

// Shopping Items
model ShoppingItem {
  id        String   @id @default(cuid())
  userId    String
  item      String
  quantity  Int      @default(1)
  purchased Boolean  @default(false)
  category  String?  // groceries, electronics, clothing, etc.
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purchased])
  @@map("shopping_items")
}

// ============================================
// USER SETTINGS
// ============================================

model UserSettings {
  id        String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Calendar Settings
  calendarDefaultDuration     Int     @default(60) // in minutes: 15, 30, 45, 60, 90, 120
  calendarWeekendMode         String  @default("both_off") // all_working, alternate_sat, both_off
  calendarFirstDayOfWeek      String  @default("sunday") // sunday, monday
  calendarGoogleConnected     Boolean @default(false)
  calendarOutlookConnected    Boolean @default(false)
  calendarAppleConnected      Boolean @default(false)
  calendarShowCurrentEvent    Boolean @default(true)

  // Clock Settings
  clockShowSeconds         Boolean @default(true)
  clockTimezone            String  @default("Asia/Kolkata")
  clockWeatherLocation     String  @default("Bengaluru,IN")
  timerDefaultDuration     Int     @default(300) // in seconds
  timerSoundEnabled        Boolean @default(true)
  worldClocks              String? @db.Text // JSON string of WorldClock[]

  // Workspace Settings
  workspaceThemeMode       String  @default("light") // light, dark, auto
  workspaceAccentColor     String  @default("#F4B000")
  workspaceFontSize        String  @default("medium") // small, medium, large
  workspaceSidebarWidth    String  @default("default") // compact, default, wide
  workspaceShowLeftSidebar Boolean @default(true)
  workspaceShowRightSidebar Boolean @default(true)

  // Todo Settings
  todoDefaultPriority   String  @default("medium") // low, medium, high
  todoShowCompleted     Boolean @default(true)
  todoAutoArchiveDays   Int     @default(30)
  todoSortBy            String  @default("date") // date, priority, manual
  todoRemindersEnabled  Boolean @default(true)

  // Email Settings (for future - REMOVED GMAIL/OUTLOOK FIELDS)
  emailSignature        String? @db.Text
  emailNotifications    Boolean @default(true)

  // Message Settings (for future)
  messageReadReceipts   Boolean @default(true)
  messageNotifications  Boolean @default(true)
  messageWhatsAppConnected Boolean @default(false)
  messageSlackConnected    Boolean @default(false)

  // General Preferences
  language              String  @default("en")
  dateFormat            String  @default("DD/MM/YYYY")
  timeFormat            String  @default("12h") // 12h, 24h
  notificationsEnabled  Boolean @default(true)
  soundEnabled          Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_settings")
}
